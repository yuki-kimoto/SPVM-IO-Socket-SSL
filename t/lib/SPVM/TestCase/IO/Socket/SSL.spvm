  static method connect_deadline : int ($port : int) {
    
    my $success_ref = [1];
    
    {
      my $host = "127.0.0.1";
      
      # Use a deadline that has already passed to ensure an immediate timeout.
      my $deadline = Go::Time->now->add(Go::Duration_1l->new_from_sec(-1.0));
      
      my $socket = (IO::Socket::SSL)undef;
      eval {
        $socket = IO::Socket::SSL->new({
          PeerAddr => $host,
          PeerPort => $port,
          Deadline => $deadline,
          SSL_verify_mode => SSL->SSL_VERIFY_NONE,
        });
      }
      
      if ($@) {
        unless ($@ isa Go::Context::Error::DeadlineExceeded) {
          warn "Unexpected error: " . $@;
          $success_ref->[0] = 0;
        }
      }
      else {
        warn "Connection unexpectedly succeeded despite an expired deadline.";
        $success_ref->[0] = 0;
        if ($socket) { $socket->close; }
      }
    }
    
    return $success_ref->[0];
  }
  
  static method read_deadline : int ($port : int) {
    
    my $success_ref = [1];
    
    # Server side
    Go->go([$port : int] method : void () {
      eval {
        my $listen_socket = IO::Socket::SSL->new({
          LocalAddr => "127.0.0.1",
          LocalPort => $port,
          Listen => 5,
          ReuseAddr => 1,
          SSL_cert_file => "$FILE_DIR/simple-cert.cert.pem",
          SSL_key_file => "$FILE_DIR/simple-cert.key.pem",
        });
        
        my $client_socket = $listen_socket->accept;
        
        # Sleep longer than the client's deadline to trigger the timeout.
        Go->sleep(Go::Duration_1l->new_from_sec(1.0));
        
        $client_socket->close;
        $listen_socket->close;
      }
      if ($@) { warn "Server error: " . $@; }
    });
    
    # Client side
    Go->go([$port : int, $success_ref : int[]] method : void () {
      eval {
        my $host = "127.0.0.1";
        
        # Connect to the server
        my $socket = IO::Socket::SSL->new({
          PeerAddr => $host,
          PeerPort => $port,
          SSL_verify_mode => SSL->SSL_VERIFY_NONE,
        });
        
        # Set a short deadline (0.5 seconds from now)
        my $deadline = Go::Time->now->add(Go::Duration_1l->new_from_sec(0.5));
        $socket->set_deadline($deadline);
        
        my $buffer = (mutable string)new_string_len 1024;
        
        # This should block and eventually throw DeadlineExceeded because the server sends nothing.
        $socket->sysread($buffer);
        
        # If no exception is thrown, it's a failure.
        warn "sysread unexpectedly succeeded or returned 0 before deadline.";
        $success_ref->[0] = 0;
        $socket->close;
      }
      if ($@) {
        # Check if the error is exactly Go::Context::Error::DeadlineExceeded
        unless ($@ isa Go::Context::Error::DeadlineExceeded) {
          warn "Unexpected error type: " . $@;
          $success_ref->[0] = 0;
        }
      }
    });
    
    # Run the scheduler until all goroutines are finished.
    Go->gosched;
    
    return $success_ref->[0];
  }
  
